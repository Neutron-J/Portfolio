---
interface Props {
  techItems: string[];
}

const { techItems } = Astro.props;
---

<div>
  {techItems.map((tech) => <span>{tech}</span>)}
</div>

<style>
  div {
    display: flex;
    flex-wrap: wrap;
    height: min-content;
    gap: var(--space-2);
  }
  span {
    border: 1px solid var(--color-primary);
    padding: var(--space-1) var(--space-2);
    white-space: nowrap;
    color: var(--color-primary);
    font-size: 0.9rem;
  }
</style>
